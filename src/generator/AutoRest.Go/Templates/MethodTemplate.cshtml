@using System.Text;

@using AutoRest.Core.ClientModel
@using AutoRest.Go
@inherits AutoRest.Go.Template<AutoRest.Go.TemplateModels.MethodTemplateModel>

@{
    StringBuilder sb = new StringBuilder();
    foreach (var parameter in Model.LocalParameters)
    {
